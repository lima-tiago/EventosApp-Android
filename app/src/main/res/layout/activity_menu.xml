<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".activities.Menu">

    <Button
        android:id="@+id/event_list_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_button"
        android:text="Lista de Eventos"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/user_list_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/event_list_button"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/event_list_button"
        android:layout_alignEnd="@id/event_list_button"
        android:background="@drawable/rounded_button"
        android:text="Lista de UsuÃ¡rios"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="30dp"
        android:layout_alignStart="@id/user_list_button"
        android:layout_alignEnd="@id/user_list_button"
        android:background="@drawable/rounded_button"
        android:text="Sair"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

</RelativeLayout>