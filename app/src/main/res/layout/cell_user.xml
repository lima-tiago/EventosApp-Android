<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_img_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_usuario"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/holo_green_light" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nome_usuario_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/card_img_usuario"
            android:background="@android:color/white"
            android:text="Nome do Usuario"
            android:textColor="@android:color/black"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/qtd_eventos_criados_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@+id/card_img_usuario"
            android:layout_alignBottom="@id/card_img_usuario"
            android:background="@android:color/white"
            android:text="Eventos Criados"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/qtd_eventos_criados_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/qtd_eventos_criados_label"
            android:layout_toEndOf="@id/qtd_eventos_criados_label"
            android:layout_alignBottom="@id/qtd_eventos_criados_label"
            android:layout_marginStart="5dp"
            android:text="00"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>